{
  "name": "vigour-statusbar-example",
  "dependencies": {
    "vigour-statusbar": "../"
  },
  "gaston": {
    "package": true
  },
  "scripts": {
    "build": "gaston build -s ./index.js  -o . -i",
    "android": "rm -rf ./build.* ; npm run build ; ../node_modules/.bin/wrapper bundle --native.selectedPlatforms android"
  },
  "vigour": {
    "statusbar": {
      "display": "top",
      "background": {
        "color": "000000",
        "opacity": 1
      },
      "text": {
        "color": "ffffff",
        "opacity": 1
      }
    },
    "native": {
      "platforms": {
        "ios": {
          "productName": "StatusBar Example",
          "organizationName": "Vigour",
          "organizationIdentifier": "io.vigour.statusbar",
          "buildNumber": "1",
          "appIndexPath": "build.html",
          "NSAllowsArbitraryLoads": true,
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        },
        "android": {
          "___location": "https://sbs-packer.dev.vigour.io",
          "debug": true,
          "run": true,
          "productName": "Statusbar Example",
          "applicationId": "io.vigour.statusbar",
          "appIndexPath": "build.html",
          "keystoreFile": "example.keystore",
          "keystorePassword": "shmexample",
          "keystoreAlias": "blabla",
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        }
      }
    }
  }
}
