{
  "name": "vigour-statusbar-tests",
  "dependencies": {
    "vigour-statusbar": "../"
  },
  "gaston": {
    "package": true
  },
  "vigour": {
    "statusbar": {
      "display": "top",
      "background": {
        "color": "0FFF30",
        "opacity": 0.5
      },
      "text": {
        "color": "33EE04",
        "opacity": 0.8
      }
    },
    "native": {
      "debug": true,
      "platforms": {
        "ios": {
          "productName": "Status Bar Tests",
          "organizationName": "Vigour",
          "organizationIdentifier": "io.vigour.statusbar",
          "buildNumber": "1",
          "appIndexPath": "build.html",
          "NSAllowsArbitraryLoads": true,
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true,
            "mocha.js": true,
            "mocha.css": true
          }
        },
        "android": {
          "debug": true,
          "run": true,
          "productName": "Status Bar Tests",
          "applicationId": "io.vigour.statusbar",
          "appIndexPath": "build.html",
          "splashDuration": "0",
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true,
            "mocha.js": true,
            "mocha.css": true
          }
        }
      }
    }
  },
  "standard": {
    "globals": [
      "alert",
      "describe",
      "it",
      "expect",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "sinon",
      "FB"
    ]
  }
}
