{
  "name": "vigour-status-bar",
  "version": "1.0.5",
  "description": "Native status bar control",
  "main": "lib/index.js",
  "scripts": {
    "test": "./node_modules/.bin/gaston test -r browser",
    "ios-test": "cd test && ../node_modules/.bin/gaston bundle -t -s manual/index.js -o . -i && wrapper build --native.selectedPlatforms ios",
    "ios": "npm run build && wrapper build --native.selectedPlatforms ios",
    "android-test": "cd test && ../node_modules/.bin/gaston bundle -t -s manual/index.js -o . -i && wrapper build --native.selectedPlatforms android",
    "android": "npm run build && wrapper build --native.selectedPlatforms android",
    "all": "npm run build && wrapper build",
    "prepush": "./node_modules/.bin/standard lib/**/*.js",
    "postinstall": "mkdir test/node_modules 2>/dev/null ; ln -s ../../ test/node_modules/vigour-status-bar"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vigour-io/status-bar.git"
  },
  "keywords": [
    "vigour",
    "wrapper",
    "native",
    "plugin",
    "status-bar"
  ],
  "bugs": {
    "url": "https://github.com/vigour-io/status-bar/issues"
  },
  "author": "Vigour",
  "contributors": [
    "Shawn Inder <shawn@vigour.io>",
    "Michiel Van Liempt <michiel@vigour.io>",
    "Alexander van de Werff <alex@vigour.io>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/vigour-io/status-bar",
  "engines": {
    "node": ">=0.12"
  },
  "dependencies": {
    "vigour-js": "~0.3.8",
    "vigour-ua": "~0.0.3",
    "vigour-wrapper": "~2.1.3"
  },
  "vigour": {
    "plugin": {
      "android": {
        "className": "io.vigour.plugin.statusbar.StatusBarPlugin",
        "instantiation": "new StatusBarPlugin(this, webview)"
      }
    }
  },
  "standard": {
    "globals": [
      "alert",
      "describe",
      "it",
      "expect",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "sinon"
    ]
  },
  "devDependencies": {
    "gaston": "~0.28.10",
    "husky": "^0.10.2",
    "standard": "^5.4.1"
  }
}
